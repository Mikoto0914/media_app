<div class="row">
  
  <div class="col s3">
    <div class="card">
      <div class="card-image waves-effect waves-block waves-light">
        <%= image_tag "#{@user.image}" %>
      </div>
      <div class="card-content">
        <span class="card-title activator grey-text text-darken-4"><%= @user.name %><i class="material-icons right">expand_less</i></span>
      </div>
      <div class="card-reveal">
        <span class="card-title grey-text text-darken-4"><%= @user.name %><i class="material-icons right">expand_more</i></span>
        <p><%= simple_format(@user.profile) %></p>
      </div>
    </div>
    <%= render "commons/collection" %>
  </div>
  
  <div class="col s9">
    <%= render "commons/tabs" %>
    <ul class="collection">
      
      <% @user.posts.each do |post| %>
        <li class="collection-item avatar">
          <%= link_to image_tag("#{post.user.image}", class: "circle responsive-img"), "/users/#{post.user.id}" %>
          <span class="title">
            <%= link_to(post.title, "/posts/#{post.id}", class: "black-text") %>
          </span>
          <p>
            <%= link_to post.user.name, "/users/#{post.user.id}" %>
            <%= post.updated_at.strftime("%Y/%m/%d") %>
          </p>
          <a href="#!" class="secondary-content"><i class="material-icons">grade</i></a>
        </li>
      <% end %>
      
    </ul>
  </div>
</div>


