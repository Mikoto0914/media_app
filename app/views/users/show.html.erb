<div class="row">
  <div class="col s3">
    <%= render partial: "commons/profile", locals: { user: @user } %>
    <% if user_signed_in? && @user.id==current_user.id %>
      <%= render "commons/collection" %>
    <% end %>
  </div>
  
  <div class="col s9">
    <br>
    <div class="row">
      <div class="col s12">
        <ul class="tabs">
          <li class="tab col s3"><%= link_to "最近の記事(#{@posts.count})", "#drafts" %></li>
          <li class="tab col s3"><%= link_to "人気の記事", "" %></li>
          <li class="tab col s3"><%= link_to "いいねした記事", "" %></li>
        </ul>
      </div>
    </div>
    <%= render partial: "commons/articles_list", locals: { posts: @posts } %>
  </div>
</div>


