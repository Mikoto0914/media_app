<div class="row">
  <div class="col s3">
    <%= render partial: "commons/profile", locals: { user: current_user } %>
    <%= render "commons/collection" %>
  </div>
  
  <div class="col s9"><br>
      <ul class="tabs">
        <li class="tab col s3"><%= link_to "下書き一覧(#{@posts_drafts.count})", "#drafts" %></li>
        <li class="tab col s3"><%= link_to "投稿記事一覧(#{@posts_releas.count})", "#release" %></li>
      </ul>
      <div id="drafts"><%= render partial: "commons/articles_list", locals: { posts: @posts_drafts } %></div>
      <div id="release"><%= render partial: "commons/articles_list", locals: { posts: @posts_releas } %></div>
  </div>
</div>


