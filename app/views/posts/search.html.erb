<div class="container">
  <%= form_tag(search_path,:method => 'get') do %>

    <div class="input-field search-line">
      <i class="material-icons prefix">search</i>
      <label for="autocomplete-input">キーワードを入力</label>
      <%= text_field_tag :search, "", class: "autocomplete", id: "autocomplete-input" %>
    </div>
  
    <%= submit_tag '検索', :name => nil , class: "btn"%>
  <% end %>
  <%= render partial: "commons/articles_list", locals: { posts: @posts } %>
</div>

  

