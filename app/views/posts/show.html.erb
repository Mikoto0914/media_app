<div class="row">
  <div class="card-panel white">
    <div class="chip">
      <%= image_tag "#{@user.image}" %>
      <%= link_to @post.user.name, "/users/#{@user.id}" %>
    </div>
    <%= @post.updated_at.strftime("%Y年%m月%d日") %>
    <br>
    <h3><%= @post.title %></h3>
    <li class="divider"></li>
    <%= markdown(@post.content).html_safe %>
  </div>
</div>
