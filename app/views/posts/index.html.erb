<div class="container">
  <%= form_tag(search_path,:method => 'get') do %>

    <div class="input-field center">
      <i class="material-icons prefix">search</i>
      <label for="autocomplete-input">キーワードを入力</label>
      <%= text_field_tag :search, "", class: "autocomplete", id: "autocomplete-input" %>
    </div>
  
    <%= submit_tag '検索', :name => nil , class: "btn"%>
  <% end %>
  <ul class="tabs">
      <li class="tab col s3"><%= link_to "最新", "#latest" %></li>
      <li class="tab col s3"><%= link_to "人気", "#popular" %></li>
    </ul>
    <div id="latest"><%= render partial: "commons/articles_list", locals: { posts: @posts_latest } %></div>
    <div id="popular"><%= render partial: "commons/articles_list", locals: { posts: @posts_all_ranks } %></div>
  
</div>

  

