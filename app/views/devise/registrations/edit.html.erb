<div class="container row">
  <div class="col s3">
    <%= render partial: "commons/profile", locals: { user: current_user } %>
    <%= render "commons/collection" %>
  </div>
  
  <div class="col s9">
    <div class="card-panel white">
      <h4 class="blue-text text-darken-2">アカウント設定</h4><hr>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
          
      <h5 class="blue-text text-darken-2">パスワード変更</h5>
      
        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
   
        <div class="field">
          <%= f.label "新しいパスワード" %> <i>（変更しない場合は入力しないでください）</i>
          <%= f.password_field :password, autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <em>（英数字<%= @minimum_password_length %> 文字以上）</em>
          <% end %>
        </div>
      
        <div class="field">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      
        <div class="field">
          <%= f.label :current_password %>
          <%= f.password_field :current_password, autocomplete: "current-password" %>
        </div>
      
        <div class="actions">
          <%= f.submit "パスワードを変更する" ,class: "btn white-text"%>
        </div>
        <br><hr>
      <% end %>
  
      <h5 class="red-text text-darken-2">アカウント削除</h5>
      <%= button_to "アカウント削除", registration_path(resource_name), 
        data: { confirm: "本当に削除しますか？" }, method: :delete, class: "btn red lighten-2" %>

    </div>
  </div>
</div>

