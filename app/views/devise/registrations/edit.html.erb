<div class="row">
  <div class="col s3">
    <%= render partial: "commons/profile", locals: { user: current_user } %>
    <%= render "commons/collection" %>
  </div>
  
  <div class="col s9">
    <div class="card-panel white setting_frame">
      <h4 class="blue-text text-darken-2">アカウント設定</h4><hr>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
          
      <h5 class="blue-text text-darken-2">ユーザー情報</h5>
      
        <div class="form-group">
          <%= f.label "ユーザー名" %>
          <%= f.text_field :name, disabled: true, class: "form-control validate" %>
        </div>
        
        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, disabled: true, autocomplete: "email" %>
        </div>
   
      <h5 class="blue-text text-darken-2">パスワード変更</h5>
      
        <div class="field">
          <%= f.label "新しいパスワード" %>
          <% if @minimum_password_length %>
            <em>（英数字<%= @minimum_password_length %> 文字以上）</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      
        <div class="field">
          <%= f.label :current_password %>
          <%= f.password_field :current_password, autocomplete: "current-password" %>
        </div>
      
        <div class="actions">
          <%= f.submit "パスワードを変更する" ,class: "btn white-text"%>
        </div>
        <br><hr>
      <% end %>
  
      <h5 class="red-text text-darken-2">アカウント削除</h5>
      <button data-target="modal-tgt" class="btn modal-trigger red lighten-2">削除する</button>

      <%= render partial: "commons/modal", locals: { target: registration_path(resource_name) } %>
    </div>
  </div>
</div>

